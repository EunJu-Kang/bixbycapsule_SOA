action (GetHospitalInfo) {
  description (병원의 데이터를 가져옵니다. 전체 병원의 리스트 또는 주변의 병원의 리스트를 가져올 수 있습니다) 
  type(Search)
  
  collect {
    input (self) {
      type (self.Self)
      min (Required) max (One)
      default-init{
        intent{
          //goal: self.GetImaginarySelf // 사용자 더미 데이터를 가져오는 함수, 테스트시 사용
          goal: self.GetSelf // 실제 마켓플레이스 배포시에 사용
        }
      }
    }
    
    input (near) {
      type (Near)
      min (Optional) max (One)
    }
    
    computed-input (point){
      type (Point)
      min (Optional) max (One)
      compute{
        if(exists(near)){
          // 사용자의 위치를 가져오기 위해서는 동의가 필요
          // capsule.bxb의 'user-profile-access' 등록
          // 참조 (https://bixbydevelopers.com/dev/docs/reference/type/capsule.permissions)
          intent{
            goal: Point
            route: geo.CurrentLocation
          }         
        }
      }
    }
    input (recommendation) { 
      type (Recommendation)
      min (Optional) max (One)
    }
  }
  
  output (Hospital){
    on-empty{
      halt{
        dialog{
          template ("[#{value(self.nameInfo.structuredName)} 님,]현재 주변에 검색되는 병원이 없습니다")
        }
      }
    }
  }
}
